<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="530dp">


    <Spinner
        android:id="@+id/Quatri2"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Quatri1"
        android:layout_alignStart="@+id/Quatri1"
        android:layout_below="@+id/Quatri1"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completar el formulario"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="24dp"
        android:text="Nomobre / Apellido" />

    <TextView
        android:id="@+id/txtNombreApel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:text="wwwwwwww" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="14dp"
        android:text="Carrera :" />

    <TextView
        android:id="@+id/txtCarrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/txtNombreApel"
        android:layout_alignStart="@+id/txtNombreApel"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="14dp"
        android:text="DNI :" />

    <TextView
        android:id="@+id/txtDni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/txtCarrera"
        android:layout_alignStart="@+id/txtCarrera"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="14dp"
        android:text="Fecha :" />

    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDni"
        android:layout_alignStart="@+id/txtDni"
        android:layout_alignTop="@+id/textView9"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp
"
        android:layout_marginTop="18dp"
        android:text="Materias"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="Anotar.." />

    <Spinner
        android:id="@+id/Quatri1"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textStyle="italic"
        android:text="Quatrimestre"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="10dp"
        android:text="Materias"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        />

    <Spinner
        android:id="@+id/spinnerMateria1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Quatri1"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Spinner
        android:id="@+id/Quatri3"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Quatri2"
        android:layout_alignLeft="@+id/Quatri2"
        android:layout_alignStart="@+id/Quatri2"
        android:layout_marginTop="15dp" />

    <Spinner
        android:id="@+id/Quatri5"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Quatri4"
        android:layout_alignLeft="@+id/Quatri4"
        android:layout_alignStart="@+id/Quatri4" />

    <Spinner
        android:id="@+id/Quatri4"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Quatri3"
        android:layout_alignStart="@+id/Quatri3"
        android:layout_below="@+id/Quatri3"
        android:layout_marginTop="14dp" />

    <Spinner
        android:id="@+id/spinnerMateria2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Quatri3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/spinnerMateria1"
        android:layout_alignStart="@+id/spinnerMateria1" />

    <Spinner
        android:id="@+id/spinnerMateria4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerMateria3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/spinnerMateria3"
        android:layout_alignTop="@+id/Quatri4" />

    <Spinner
        android:id="@+id/spinnerMateria5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerMateria3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/spinnerMateria3"
        android:layout_alignTop="@+id/Quatri5"
        android:layout_toEndOf="@+id/textView2" />

    <Spinner
        android:id="@+id/spinnerMateria3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerMateria2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/spinnerMateria2"
        android:layout_alignTop="@+id/Quatri3" />
</RelativeLayout>
    </ScrollView>